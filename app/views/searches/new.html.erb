<h1>Advance Search</h1>

<%= form_for @search, html: {class: "pure-form"} do |s| %>
  <div class="row">
    <div class="form-group col-md-4">
      <b><%= s.label :keywords, class: "form-control-label" %></b>
      <%= s.text_field :keywords, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <b><%= s.label :category, class: "form-control-label" %></b>
      <%= s.select :category, options_for_select(@categories), include_blank: "Select category", class: 'form-control' %>
    </div>

    <div class="form-group col-md-4">
      <p><b><%= s.label :min_price, 'Min Price', class: "form-control-label" %></b>
      <%= s.text_field :min_price, size: 10, class: 'form-control' %></p>
      <p><b><%= s.label :max_price, 'Max Price', class: "form-control-label" %></b>
      <%= s.text_field :max_price, size: 10, class: 'form-control' %></p>
    </div>

    <div class="form-group col-md-6">
      <b><%= s.label :isbn, 'ISBN', class: "form-control-label" %></b>
      <%= s.text_field :isbn, size: 10, class: 'form-control' %><br />
    </div>
  </div>
  <div class="actions"><%= s.submit "Search", class: "btn btn-success" %></div>
<% end %>
<br />
<p><%= link_to 'Back', books_path, class: "btn btn-primary" %></p>
